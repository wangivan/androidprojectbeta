            android:layout_height="30dp"
            android:text="耗电分时统计"
            android:textSize="20sp"
            android:background="@color/lightblue"/>

        <TextView
            android:id="@+id/concrete_quantity"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
